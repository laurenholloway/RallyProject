@*REGISTER TO VOTE SECTION*@
<div class="allRegContainer">
    <div id="Register" class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-default infoBox">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Register to Vote</b></h3>
            </div>
            <div class="panel-body">
                Want to vote? First step, register now.<br /> Right here.
                @*Add Google Map here*@
                <p id="rb1">@Html.ActionLink("In Person", "Map1", "Home", new { @class = "btn btn-primary"})<a target="_blank" href="http://www.sos.state.oh.us/sos/upload/elections/forms/4010.pdf" class="btn btn-default" role="button">By Mail</a></p>

                @*id="rb1" class="btn btn-primary" role="button">@Html.ActionLink("In Person", "Map1", "Home")*@
            </div>
        </div>
    </div>

    @*CHECK REGISTRATION INFORMATION SECTION*@

    <div id="CheckReg" class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-default infoBox">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Check Your Registration Info</b></h3>
            </div>
            <div class="panel-body">
                Not sure if your voter registration is up-to-date? Check your info online.
                <p id="rb2"><a target="_blank" href="http://boe.cuyahogacounty.us/en-US/my-voting-information.aspx" class="btn btn-primary" role="button">Check Registration</a></p>

            </div>
        </div>
    </div>

    @*UPDATE NAME SECTION*@
    <div id="UpdateName" class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-default infoBox">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Update Your Name</b></h3>
            </div>
            <div class="panel-body">
                So, you changed your name. Cool! And you want to vote? Great! First, you will need to update your name on your voter registration.
                <p id="rb3"><a target="_blank" href="http://boe.cuyahogacounty.us/pdf_boe/en-US/Voter_regcard.pdf" class="btn btn-primary" role="button">Update Name</a></p>

            </div>
        </div>
    </div>

    @*UPDATE ADDRESS SECTION*@
    <div id="UpdateAdd" class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-default infoBox">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Update Your Address</b></h3>
            </div>
            <div class="panel-body">
                Congrats on your move! Now, update your address. It'll only take a second.
                <p id="rb4"><a target="_blank" href="https://olvr.sos.state.oh.us/ovru/ModifyAddress.aspx" class="btn btn-primary" role="button">Online</a><a target="_blank" href="http://www.sos.state.oh.us/sos/upload/elections/forms/4010.pdf" class="btn btn-default" role="button">By Mail</a></p>

            </div>
        </div>
    </div>
</div>
